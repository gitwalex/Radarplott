<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RawApp.TextAppearance" parent="TextAppearance.AppCompat"></style>

    <style name="RawApp.TextAppearance.Small" parent="RawApp.TextAppearance">
        <item name="android:textSize">@dimen/smallText</item>
    </style>

    <style name="RawApp.TextAppearance.Medium" parent="RawApp.TextAppearance.Small">
        <item name="android:textSize">@dimen/mediumText</item>
    </style>


    <style name="RawApp.TextAppearance.Large" parent="RawApp.TextAppearance.Small">
        <item name="android:textSize">@dimen/largeText</item>
    </style>

    <style name="RawApp.TextAppearance.ExtraSmall" parent="RawApp.TextAppearance">
        <item name="android:textSize">@dimen/extraSmallText</item>
    </style>

    <style name="TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="ErrorText" parent="RawApp.TextAppearance.Small">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="HintText" parent="RawApp.TextAppearance.Small">
        <item name="android:textColorHint">@android:color/holo_blue_light</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>


</resources>