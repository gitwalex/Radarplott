<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="lage"
            type="com.gerwalex.radarplott.math.Lage" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.helper.widget.Flow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="abstandBCR,timeToBCR"
            app:flow_maxElementsWrap="1"
            app:flow_wrapMode="chain" />


        <TextView
            android:id="@+id/abstandBCR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/AbstandBCR(lage.abstandBCR)}" />

        <TextView
            android:id="@+id/timeToBCR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/TimeToBCR(lage.timeToBCR)}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>