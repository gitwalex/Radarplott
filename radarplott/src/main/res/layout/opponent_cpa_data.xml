<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="lage"
            type="com.gerwalex.radarplott.math.Lage" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.helper.widget.Flow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="abstandCPA, timeToCPA,distanceToCPA"
            app:flow_maxElementsWrap="1"
            app:flow_wrapMode="chain" />


        <TextView
            android:id="@+id/abstandCPA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/AbstandCPA(lage.abstandCPA)}" />

        <TextView
            android:id="@+id/timeToCPA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/TimeToCPA(lage.timeToCPA)}" />

        <TextView
            android:id="@+id/distanceToCPA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/DistanceToCPA(lage.DistanceToCPA)}" />

        <TextView
            android:id="@+id/rwPeilungCPA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/rwPeilungCPA(lage.peilungRechtweisendCPA)}" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>